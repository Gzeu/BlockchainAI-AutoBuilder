# =================================================================
# BlockchainAI AutoBuilder - Environment Variables
# =================================================================
# Copie acest fișier ca .env.local și completează valorile

# =================================================================
# GENERAL
# =================================================================
NODE_ENV=development
NEXT_PUBLIC_APP_NAME="BlockchainAI AutoBuilder"
NEXT_PUBLIC_APP_VERSION="0.1.0"

# =================================================================
# DATABASE
# =================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/blockchainai_db?schema=public"
DIRECT_URL="postgresql://username:password@localhost:5432/blockchainai_db?schema=public"

# =================================================================
# NEXTAUTH / AUTHENTICATION
# =================================================================
NEXTAUTH_SECRET="your-secret-key-here-minimum-32-chars"
NEXTAUTH_URL="http://localhost:3000"

# =================================================================
# AI SERVICES
# =================================================================
OPENAI_API_KEY="sk-your-openai-api-key"
CLAUDE_API_KEY="your-claude-api-key"
NEXT_PUBLIC_AI_ENABLED=true

# =================================================================
# BLOCKCHAIN - MULTIVERSX
# =================================================================
MULTIVERSX_NETWORK="devnet" # devnet, testnet, mainnet
MULTIVERSX_GATEWAY_URL="https://devnet-gateway.multiversx.com"
MULTIVERSX_API_URL="https://devnet-api.multiversx.com"
MULTIVERSX_EXPLORER_URL="https://devnet-explorer.multiversx.com"
MULTIVERSX_PRIVATE_KEY="your-wallet-private-key-for-contracts"

# Frontend Blockchain Config
NEXT_PUBLIC_MULTIVERSX_NETWORK="devnet"
NEXT_PUBLIC_MULTIVERSX_GATEWAY_URL="https://devnet-gateway.multiversx.com"
NEXT_PUBLIC_MULTIVERSX_API_URL="https://devnet-api.multiversx.com"
NEXT_PUBLIC_MULTIVERSX_EXPLORER_URL="https://devnet-explorer.multiversx.com"

# =================================================================
# WEB3 INTEGRATION
# =================================================================
NEXT_PUBLIC_WALLET_CONNECT_PROJECT_ID="your-walletconnect-project-id"
NEXT_PUBLIC_ENABLE_WEB3=true

# =================================================================
# EXTERNAL APIS
# =================================================================
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_your-stripe-publishable-key"

# Email Service (Resend)
RESEND_API_KEY="re_your-resend-api-key"
NEXT_PUBLIC_CONTACT_EMAIL="contact@blockchainai-autobuilder.com"

# Analytics
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
POSTHOG_API_KEY="your-posthog-api-key"
NEXT_PUBLIC_POSTHOG_HOST="https://app.posthog.com"

# =================================================================
# DEPLOYMENT & CI/CD
# =================================================================
# Vercel
VERCEL_TOKEN="your-vercel-token"
VERCEL_ORG_ID="your-vercel-org-id"
VERCEL_PROJECT_ID="your-vercel-project-id"

# Railway
RAILWAY_TOKEN="your-railway-token"

# =================================================================
# MONITORING & LOGGING
# =================================================================
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
NEXT_PUBLIC_SENTRY_DSN="https://your-public-sentry-dsn@sentry.io/project-id"

# =================================================================
# REDIS (for caching)
# =================================================================
REDIS_URL="redis://localhost:6379"

# =================================================================
# FILE STORAGE
# =================================================================
# Supabase Storage
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# =================================================================
# DEVELOPMENT TOOLS
# =================================================================
# Pentru AI automation tools
GITHUB_TOKEN="ghp_your-github-personal-access-token"

# Pentru notificări CI/CD
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/your/webhook/url"

# =================================================================
# API RATE LIMITING
# =================================================================
API_RATE_LIMIT_MAX=100
API_RATE_LIMIT_WINDOW_MS=900000

# =================================================================
# FEATURE FLAGS
# =================================================================
NEXT_PUBLIC_FEATURE_AI_CODEGEN=true
NEXT_PUBLIC_FEATURE_MULTI_CHAIN=false
NEXT_PUBLIC_FEATURE_PREMIUM=false
