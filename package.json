{
  "name": "blockchainai-autobuilder",
  "version": "0.1.0",
  "private": true,
  "description": "ðŸš€ Platforma de automatizare pentru dezvoltarea aplicaÈ›iilor blockchain È™i AI",
  "author": "George Pricop <pricopgeorge@gmail.com>",
  "license": "MIT",
  "homepage": "https://github.com/Gzeu/BlockchainAI-AutoBuilder#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Gzeu/BlockchainAI-AutoBuilder.git"
  },
  "bugs": {
    "url": "https://github.com/Gzeu/BlockchainAI-AutoBuilder/issues"
  },
  "keywords": [
    "blockchain",
    "web3",
    "ai",
    "automation",
    "nextjs",
    "typescript",
    "multiversx",
    "smart-contracts"
  ],
  "packageManager": "pnpm@8.15.1",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "tools/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=web",
    "dev:api": "turbo dev --filter=api", 
    "dev:contracts": "turbo dev --filter=smart-contracts",
    "build": "turbo build",
    "build:web": "turbo build --filter=web",
    "build:api": "turbo build --filter=api",
    "start": "turbo start",
    "clean": "turbo clean && rm -rf node_modules",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "typecheck": "turbo typecheck",
    "test": "turbo test",
    "test:unit": "turbo test:unit",
    "test:e2e": "turbo test:e2e",
    "test:contracts": "turbo test:contracts",
    "deploy": "turbo deploy",
    "ai:generate": "node tools/ai-automation/generate.js",
    "ai:review": "node tools/ai-automation/review.js",
    "ai:optimize": "node tools/ai-automation/optimize.js",
    "db:migrate": "turbo db:migrate",
    "db:seed": "turbo db:seed",
    "db:studio": "turbo db:studio",
    "contracts:build": "turbo contracts:build",
    "contracts:test": "turbo contracts:test",
    "contracts:deploy": "turbo contracts:deploy"
  },
  "devDependencies": {
    "@turbo/gen": "^1.11.2",
    "turbo": "^1.11.2",
    "prettier": "^3.1.1",
    "@types/node": "^20.10.6",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "pnpm typecheck && pnpm test"
    }
  }
}